<!DOCTYPE HTML>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="pragma" content="no-cache" />
    <meta http-equiv="cache-control" content="max-age=604800" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>Hổ trợ bệnh nhân </title>

    <link href="~/Content/images/anVat.png" rel="shortcut icon" type="image/x-icon">

    <!-- jQuery -->
    <script src="~/Content/js/jquery-2.0.0.min.js" type="text/javascript"></script>

    <!-- Bootstrap4 files-->
    <script src="~/Content/js/bootstrap.bundle.min.js" type="text/javascript"></script>
    <link href="~/Content/css/bootstrap.css" rel="stylesheet" type="text/css" />

    <!-- Font awesome 5 -->

    <link href="~/Content/fonts/fontawesome/css/all.min.css" rel="stylesheet" />
    <!-- custom style -->
    <link href="~/Content/css/ui.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/responsive.css" rel="stylesheet" type="text/css" />

    <!-- custom javascript -->
    <script src="~/Content/js/script.js" type="text/javascript"></script>



</head>
<body>

    <header class="section-header">
        <section class="header-main border-bottom">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-xl-2 col-lg-3 col-md-12">
                        <a href="~/Home/Index" class="brand-wrap">
                            <img width="80px" height="70px" class="logo" <img src="~/Content/images/traitim.png" />
                        </a> <!-- brand-wrap.// -->

                    </div>
                    <div class="col-xl-6 col-lg-5 col-md-6">

                        @using (Html.BeginForm("Index", "SanPham", FormMethod.Get))
                        {
                            <p class="container">
                                Tìm kiếm tin : @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
                                <input type="submit" value="Tìm kiếm" />
                            </p>}
                    </div> <!-- col.// -->
                    <div class="col-xl-4 col-lg-4 col-md-6">
                        <div class="widgets-wrap float-md-right">
                            <div class="widget-header mr-3">
                                <a href="#" class="widget-view">
                                    <div class="icon-area">
                                        <i class="fa fa-user"></i>

                                    </div>
                                    @if (Session["Matk"] != null && Session["Quyenadmin"] == null)
                                    {
                                        <li class="nav-item dropdown" style="list-style-type: none">
                                            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#">Tùy Chọn</a>
                                            <div class="dropdown-menu">
                                                <a class="dropdown-item" href="~/NguoiDung/DangXuat">Đăng Xuất</a>

                                            </div>
                                        </li>}
                                    @if (Session["Matk"] != null && Session["Quyenadmin"] != null)
                                    {
                                        <li class="nav-item dropdown">
                                            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#">Tùy Chọn</a>
                                            <div class="dropdown-menu">
                                                <a class="dropdown-item" href="~/admin/Home/Index"> Quản Trị</a>
                                                <a class="dropdown-item" href="~/NguoiDung/DangXuat">Đăng Xuất</a>
                                            </div>
                                        </li>}
                                    @if (Session["Matk"] == null)
                                    {
                                        <a href="~/NguoiDung/DangXuat"> Đăng Nhập</a>}


                                </a>
                            </div>



                        </div> <!-- widgets-wrap.// -->
                    </div> <!-- col.// -->
                </div> <!-- row.// -->
            </div> <!-- container.// -->
        </section> <!-- header-main .// -->


        <nav class="navbar navbar-main navbar-expand-lg border-bottom">
            <div class="container">

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#main_nav" aria-controls="main_nav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="main_nav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="#"><i class="fa fa-bars text-muted mr-2"></i>Trang chủ </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#">thông tin bệnh nhân</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="~/NguoiBenh/dsNguoiBenh">bệnh nhân cần nhận tạng</a>
                                <a class="dropdown-item" href="#">bệnh nhân có hoàn cảnh khó khăn cần trợ giúp</a>

                            </div>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="~/NguoiHien/dsNguoiBenh">Thông tin hiến tạng </a>
                        </li>



                    </ul>
                    <ul class="navbar-nav ml-md-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="#">Thông tin liên hệ</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#">Đăng Tin</a>
                            <div class="dropdown-menu">
                                @if (Session["Matk"] != null && Session["Quyendangbai"] == null)
                                {
                                    <a class="dropdown-item" href="~/NguoiDung/Khongduoctruycap">Đăng tin hiến tạng</a>
                                    <a class="dropdown-item" href="/NguoiDung/Khongduoctruycap">Đăng tin bệnh nhân cần nhận tạng hoặc gặp khó khăn </a>}
                                @if (Session["Matk"] != null && Session["Quyendangbai"] != null)
                                {
                                    <a class="dropdown-item" href="~/NguoiHien/Taobaiviet">Đăng tin hiến tạng</a>
                                    <a class="dropdown-item" href="~/NguoiBenh/Taobaiviet">Đăng tin bệnh nhân cần nhận tạng hoặc gặp khó khăn </a>}

                            </div>
                        </li>
                        @*<li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#">Hỗ trợ</a>
                                <div class="dropdown-menu">
                                    @if (Session["Matk"] != null && Session["Quyendangbai"] == null)
                                    {

                                        <a class="dropdown-item" href="~/NguoiDung/Khongduoctruycap">Khiếu nại về bài viết có dấu hiệu lừa đảo </a>
                                    }
                                    @if (Session["Matk"] != null && Session["Quyendangbai"] == null)
                                    {

                                        <a class="dropdown-item" href="~/KhieuNai/TaoKhieuNại">Khiếu nại về bài viết có dấu hiệu lừa đảo </a>
                                    }
                                </div>
                            </li>*@
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="" data-toggle="dropdown">Hỗ trợ</a>

                            <div class="dropdown-menu dropdown-menu-right">
                                @if (Session["Matk"] != null && Session["Quyendangbai"] == null)
                                {

                                    <a class="dropdown-item" href="~/NguoiDung/Khongduoctruycap">Khiếu nại về bài viết có dấu hiệu lừa đảo </a>
                                }
                                @if (Session["Matk"] != null && Session["Quyendangbai"] != null)
                                {

                                    <a class="dropdown-item" href="~/KhieuNai/TaoKhieuNai">Khiếu nại về bài viết có dấu hiệu lừa đảo </a>
                                }


                            </div>
                        </li>
                    </ul>
                </div> <!-- collapse .// -->
            </div> <!-- container .// -->
        </nav>
    </header> <!-- section-header.// -->

    @RenderBody()

    <footer class="section-footer bg-secondary">
        <div class="container">
            <section class="footer-top padding-y-lg text-white">
                <div class="row">

                    <aside class="col-md">
                        <h6 class="title">Liên hệ</h6>
                        <ul class="list-unstyled">
                            <li><a href="#"> <i class="fab fa-facebook"></i> Facebook </a></li>
                            <li><a href="#"> <i class="fab fa-twitter"></i> Twitter </a></li>
                            <li><a href="#"> <i class="fab fa-instagram"></i> Instagram </a></li>
                            <li><a href="#"> <i class="fab fa-youtube"></i> Youtube </a></li>
                        </ul>
                    </aside>
                </div> <!-- row.// -->
            </section>	<!-- footer-top.// -->

            <section class="footer-bottom text-center">

                <p class="text-white"></p>
                <p class="text-muted"> </p>
                <br>
            </section>
        </div><!-- //container -->
    </footer>
    <!-- ========================= FOOTER END // ========================= -->
</body>
<style>
    .header-main {
        background-color: #12225b
    }

    .widget-header a {
        color: #f2f3f7;
    }

    .container {
        color: white;
    }

    .widget-header a {
        font-size: 20px;
    }

    .dropdown-menu.show {
        display: block;
    }

    .nav-link {
        color: black;
        font-size: 20px;
        font-style: revert;
    }

    .bg-secondary {
        --bs-bg-opacity: 1;
        background-color: #12225b !important;
    }

    .widget-header a {
        color: #0dcaf0;
    }
</style>
</html>

