@model HoTroBenhNhan.Data.Trinhtangbenh

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layuot.cshtml";

}




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 style="margin-top:50px;margin-bottom:50px;color:red" >Bộ phận liên quan đến bệnh tình hoặc hiến tạng </h4>
        <hr />
