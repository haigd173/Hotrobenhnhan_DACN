@model HoTroBenhNhan.Data.Thongtinhientang

@{
    ViewBag.Title = "ChiTietNguoiHien";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://getbootstrap.com/docs/5.2/assets/css/docs.css" rel="stylesheet">
    <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css'>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
    <link href="~/Content/css/detailInforPatiens.css" rel="stylesheet" />
    <title>Document</title>
    <script type="text/javascript" src="https://platform-api.sharethis.com/js/sharethis.js#property=637089d6074d6c00198224a2&product=inline-share-buttons&source=platform" async="async"></script>
</head>

<body>

    <div id="wrap">
        <div class="container mt-3">
            <div class="row">
                <div class="col-xs-6 col-sm-4 col-md-4 col-lg-1">
                </div>
                <div class="col-xs-6 col-sm-4 col-md-4 col-lg-3 mt-5">
                    <div class="row">
                        <div class="avartarpatient col-xs-6 col-sm-4 col-md-4 col-lg-8">
                            <div class="img">
                                <img src="@Model.Benhvien.Anh" alt="">
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item fs-6 text-center"><p class="nguoihien">Địa Chỉ bệnh viện: </p> @Model.Benhvien.DiaChi</li>
                                    <li class="list-group-item fs-6 text-center"><p class="nguoihien">Số điện thoại Bệnh viện  :</p> @Model.Benhvien.Sđt</li>
                                    <li class="list-group-item fs-6 text-center"><p class="nguoihien">Bộ phận hiến  :</p> @Model.Trinhtangbenh.Tenbenh</li>
                                </ul>
                            </div>

                            <ul class="list-group list-group-flush">
                                <li class="list-group-item fs-6 text-center"><p class="nguoihien" >Họ tên người hiến:</p> @Model.Hotennguoihien</li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-xs-6 col-sm-4 col-md-4 col-lg-7">
                    <div class="title">
                        <h2 class="fs-2 text-center fw-bold text-dark">THÔNG TIN NGƯỜI HIẾN</h2>
                    </div>
                    <div class="content col-xs-6 col-sm-4 col-md-4 col-lg-12">
                        <div class="content-img">
                            <img src="@Model.Benhvien.Anh"
                                 alt="">
                            <div class="content-describe-short">
                                <p class="fs-6 fst-italic text-center">Ảnh minh hoạ</p>
                            </div>
                        </div>
                        <div class="content-describe text-dark mb-5">
                            @Model.Noidunghientang
                        </div>
                    </div>
                </div>
                <div class="col-xs-6 col-sm-4 col-md-4 col-lg-1">
                </div>
            </div>
            <div class="row">

            </div>
        </div>
    </div>


    <div class="sharethis-inline-share-buttons"> </div>

</body>

</html>
<style>
    .fs-2 {
        margin-top: 100px;
        margin-bottom: 50px;
        font-size: 2rem !important;
    }

    .sharethis-inline-share-buttons {
        margin-bottom: 100px;
    }
    
</style>
