@model HoTroBenhNhan.Data.Taikhoan

@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- jQuery -->
<script src="~/Content/js/jquery-2.0.0.min.js" type="text/javascript"></script>

<!-- Bootstrap4 files-->
<script src="~/Content/js/bootstrap.bundle.min.js" type="text/javascript"></script>
<link href="~/Content/css/bootstrap.css" rel="stylesheet" type="text/css" />

<!-- Font awesome 5 -->

<link href="~/Content/fonts/fontawesome/css/all.min.css" rel="stylesheet" />
<!-- custom style -->
<link href="~/Content/css/ui.css" rel="stylesheet" type="text/css" />
<link href="~/Content/css/responsive.css" rel="stylesheet" type="text/css" />

<!-- custom javascript -->
<script src="~/Content/js/script.js" type="text/javascript"></script>


<div class="card mx-auto" style="max-width:520px; margin-top:40px; margin-bottom:40px; height:600px;">
    <div class="card-body">
        <h4 class="card-title mb-4">Đăng nhập</h4>
        @using (Html.BeginForm("DangNhap", "NguoiDung", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
    <form>

        <div class="form-group">
            <a>Tên đăng nhập</a>
            @Html.TextBoxFor(m => m.TenDN, "", new { @class = "form-control", @placeholder = "Tên ĐN ,Email" })
        </div> <!-- form-group// -->
        <div class="form-group">
            <a>
                Mật khẩu
            </a>
            @Html.PasswordFor(m => m.Matkhau, new { @class = "form-control", @placeholder = "Mật khẩu" })
        </div> <!-- form-group// -->
        <div class="loidangnhap">
            @ViewBag.error
        </div>
        
        <div class="form-group">
            <a href="#" class="float-right">Quên mật khẩu?</a>

        </div> <!-- form-group form-check .// -->
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block"> Đăng nhập </button>
        </div> <!-- form-group// -->
        <p class="text-center mt-4">Bạn chưa có tài khoản ? <a href="~/NguoiDung/DangKi">Đăng kí tại đây</a></p>
        <br><br>
    </form>
        }
    </div> <!-- card-body.// -->
</div> <!-- card .// -->
<style>
    .card-title {
        margin-bottom: 10px;
        color: mediumvioletred;
        font-size: 40px;
        margin-left: 20%;
    }

    .form-control {
        margin-left: 20%;
        width: 80%;
    }

    .btn-primary {
        color: #fff;
        background-color: var(--green);
        border-color: var(--success);
    }
    .loidangnhap {
        font-size: 17px;
        color: red;
    }
</style>